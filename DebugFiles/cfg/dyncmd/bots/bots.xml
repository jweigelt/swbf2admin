<?xml version="1.0" encoding="utf-8"?>
<DynamicCommand xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <Enabled>true</Enabled>
  <Alias>bots</Alias>
  <Usage>bots &lt;count&gt;</Usage>
  
  <UserConfig>
    <OnNoParam>No bot count specified. {usage}</OnNoParam>
    <OnInvalidParam>Invalid input {input}. Expected numeric value (0~32).</OnInvalidParam>
    <OnSet>{admin} set AI player count to {value}.</OnSet>
  </UserConfig>
</DynamicCommand>